{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SSHT L1 Skeleton Payload",
  "description": "L1 skeleton payload: submap pose-graph backbone (nodes + edges) for semantic submap hierarchical transmission.",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "spec_version": {
      "type": "string",
      "description": "Specification version, e.g., '0.1.0'."
    },

    "frame_id": {
      "type": "string",
      "description": "Coordinate frame of all poses, e.g., 'world' or 'map'."
    },

    "stamp": {
      "type": "number",
      "description": "Timestamp (seconds)."
    },

    "nodes": {
      "type": "array",
      "description": "Submap pose nodes (backbone of the pose graph).",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "submap_id": {
            "type": "integer",
            "minimum": 0,
            "description": "Numeric submap identifier."
          },

          "pose": {
            "type": "object",
            "description": "SE(3) pose of the submap in the global frame.",
            "additionalProperties": false,
            "properties": {
              "x":  { "type": "number" },
              "y":  { "type": "number" },
              "z":  { "type": "number" },
              "qx": { "type": "number" },
              "qy": { "type": "number" },
              "qz": { "type": "number" },
              "qw": { "type": "number" }
            },
            "required": ["x", "y", "z", "qx", "qy", "qz", "qw"]
          },

          "info": {
            "type": "array",
            "description": "Row-major information matrix entries (e.g., flattened 6x6).",
            "items": { "type": "number" },
            "minItems": 1
          }
        },
        "required": ["submap_id", "pose"]
      }
    },

    "edges": {
      "type": "array",
      "description": "Pose-graph edges between submaps (odometry / loop closures).",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "from_submap_id": {
            "type": "integer",
            "minimum": 0,
            "description": "Source submap id."
          },
          "to_submap_id": {
            "type": "integer",
            "minimum": 0,
            "description": "Target submap id."
          },
          "type": {
            "type": "string",
            "description": "Edge type, e.g., 'odom' or 'loop'."
          },
          "info": {
            "type": "array",
            "description": "Row-major information matrix entries for this edge.",
            "items": { "type": "number" },
            "minItems": 1
          }
        },
        "required": ["from_submap_id", "to_submap_id", "type"]
      }
    }
  },

  "required": ["frame_id", "nodes"]
}
