{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SSHT L3 Semantics Delta Payload",
  "description": "L3 semantics delta payload: sparse semantic updates grouped by blocks.",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "spec_version": {
      "type": "string",
      "description": "Specification version, e.g., '0.1.0'."
    },

    "frame_id": {
      "type": "string",
      "description": "Coordinate frame of all blocks, e.g., 'world' or 'map'."
    },

    "blocks": {
      "type": "array",
      "description": "Sparse blocks with voxel-level semantic updates.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "block_id": {
            "type": "string",
            "description": "Block identifier (e.g., Morton code or hashed index)."
          },
          "resolution": {
            "type": "number",
            "description": "Voxel resolution in meters."
          },
          "voxels": {
            "type": "array",
            "description": "Sparse semantic updates within this block.",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "i": {
                  "type": "integer",
                  "description": "Voxel index i (block-local)."
                },
                "j": {
                  "type": "integer",
                  "description": "Voxel index j (block-local)."
                },
                "k": {
                  "type": "integer",
                  "description": "Voxel index k (block-local)."
                },

                "class_logit_delta": {
                  "type": "array",
                  "description": "Per-class logit deltas for this voxel.",
                  "items": {
                    "type": "number"
                  }
                },

                "instance_id": {
                  "type": "string",
                  "description": "Optional instance identifier for this voxel."
                },

                "merge_hint": {
                  "type": "array",
                  "description": "Optional merge hints (e.g., candidate instance IDs to merge with).",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["i", "j", "k"]
            }
          }
        },
        "required": ["block_id", "resolution", "voxels"]
      }
    }
  },

  "required": ["frame_id", "blocks"]
}
