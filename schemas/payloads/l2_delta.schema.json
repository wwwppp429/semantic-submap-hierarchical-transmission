{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SSHT L2 Geometry Delta Payload",
  "description": "L2 geometry delta payload: sparse occupancy / distance / weight updates grouped by blocks.",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "spec_version": {
      "type": "string",
      "description": "Specification version, e.g., '0.1.0'."
    },

    "frame_id": {
      "type": "string",
      "description": "Coordinate frame of all blocks, e.g., 'world' or 'map'."
    },

    "blocks": {
      "type": "array",
      "description": "Sparse blocks with voxel-level geometry updates.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "block_id": {
            "type": "string",
            "description": "Block identifier (e.g., Morton code or hashed index)."
          },
          "resolution": {
            "type": "number",
            "description": "Voxel resolution in meters."
          },
          "voxels": {
            "type": "array",
            "description": "Sparse voxel updates within this block.",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "i": {
                  "type": "integer",
                  "description": "Voxel index i (block-local)."
                },
                "j": {
                  "type": "integer",
                  "description": "Voxel index j (block-local)."
                },
                "k": {
                  "type": "integer",
                  "description": "Voxel index k (block-local)."
                },

                "delta_log_odds": {
                  "type": "number",
                  "description": "Occupancy log-odds delta for this voxel."
                },
                "delta_distance": {
                  "type": "number",
                  "description": "Optional distance-field delta for this voxel."
                },
                "delta_weight": {
                  "type": "number",
                  "description": "Optional integration weight delta."
                }
              },
              "required": ["i", "j", "k"],
              "oneOf": [
                { "required": ["delta_log_odds"] },
                { "required": ["delta_distance", "delta_weight"] }
              ]
            }
          }
        },
        "required": ["block_id", "resolution", "voxels"]
      }
    }
  },

  "required": ["frame_id", "blocks"]
}
