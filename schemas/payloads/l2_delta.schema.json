{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "L2 Geometry Delta",
  "type": "object",
  "required": [
    "layer",
    "version",
    "frame_id",
    "blocks"
  ],
  "properties": {
    "layer": {
      "const": "L2_DELTA"
    },
    "version": {
      "type": "string"
    },
    "frame_id": {
      "type": "string"
    },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "block_id",
          "resolution",
          "voxels"
        ],
        "properties": {
          "block_id": {
            "type": "string"
          },
          "resolution": {
            "type": "number"
          },
          "voxels": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "ijk"
              ],
              "properties": {
                "ijk": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "minItems": 3,
                  "maxItems": 3
                },
                "dL": {
                  "type": "number"
                },
                "dd": {
                  "type": "number"
                },
                "w_delta": {
                  "type": "number"
                },
                "ts": {
                  "type": "number"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "dL"
                  ]
                },
                {
                  "required": [
                    "dd",
                    "w_delta"
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}